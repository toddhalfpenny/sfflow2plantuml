{
  "name": "sfflowvisualiser",
  "displayName": "Salesforce Flow Visualiser",
  "description": "Salesforce Flow Visualiser VS Code extension",
  "icon": "images/icon.png",
  "version": "0.2.2",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Visualization",
    "Formatters"
  ],
  "keywords": [
    "Salesforce",
    "Flow",
    "Visualiser",
    "Visualizer",
    "Mermaid",
    "Diagram"
  ],
  "activationEvents": [
    "workspaceContains:sfdx-project.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sfflowvisualiser.generateWebview",
        "title": "Flow visualiser: Render"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sfflowvisualiser.generateWebview",
          "when": "editorLangId == xml"
        }
      ],
      "editor/context": [
        {
          "command": "sfflowvisualiser.generateWebview",
          "when": "resourceExtname == '.xml'",
          "group": "z_sfflowvisualiser@3"
        }
      ],
      "explorer/context": [
        {
          "command": "sfflowvisualiser.generateWebview",
          "when": "resourceExtname == '.xml'",
          "group": "z_sfflowvisualiser@3"
        }
      ]
    }
  },
  "author": "Todd Halfpenny",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:toddhalfpenny/sfflowvisualiser-vscode.git"
  },
  "publisher": "ToddHalfpenny",
  "extensionDependencies": [],
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "1.83.0",
    "@types/vscode-webview": "^1.57.4",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "esbuild": "^0.16.17",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "mermaid": "10.4.0",
    "salesforce-flow-visualiser": "^1.0.0"
  }
}
